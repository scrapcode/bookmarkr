<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Bookmarkr" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Bookmarkr" %>">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <header>
      <%= render 'layouts/navigation' %>
    </header>
    <main role="main">
       <%= render 'layouts/messages' %>
       <%= yield %>
      <% if Rails.env.development? %>
      <section><div class="col-md-6 col-md-offset-3"><b>DEBUG:</b><br><%= debug(params) %></div></section>
      <% end %>
    </main>
  </body>
</html>
