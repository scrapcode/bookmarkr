<div class="row">
    <div class="col-md-6 col-md-offset-3">
  
    <h1><%= @user.name %></h1>
    
    <h3>Marks:</h3>
    <% @user.marks.each do |mark| %>
      <a href="<%= mark.url %>" target="_BLANK"><%= mark.title %></a> 
      <% unless mark.tags.empty? %>
      ( <% mark.tags.each do |tag| %>
          <%= tag.name %>, 
        <% end %> )
      <% end %>
      <br>
    <% end %>
    
  </div>
</div>