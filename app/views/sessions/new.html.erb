<% provide(:title, "Sign in") %>
<section>
  <div class="row">
    <div class="form">
      <h1>Sign in</h1>
      <%= form_for(:session, url: sessions_path) do |f| %>
        
        <p>
          <%= f.label :email %>
          <%= f.text_field :email %>
        </p>
        <p>
          <%= f.label :password %>
          <%= f.password_field :password %>
        </p>
        
        <%= f.submit %>
        
      <% end %>
      
      <p>New user? <%= link_to "Sign up!", signup_path %></p>
    </div>
  </div>
</section>